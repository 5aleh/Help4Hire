<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">


  <android.support.v7.widget.CardView
      android:id="@+id/activeService"
      android:layout_width="match_parent"
      android:layout_height="175dp"
      android:elevation="50dp"
      android:padding="4dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


      <TextView
          android:id="@+id/provider_name"
          android:layout_width="148dp"
          android:layout_height="29dp"
          android:layout_alignParentTop="true"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="26dp"
          android:textSize="20sp"
          app:layout_constraintEnd_toStartOf="@+id/provider_service_title"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="Shane Walker" />

      <TextView
          android:id="@+id/provider_service_title"
          android:layout_width="99dp"
          android:layout_height="27dp"
          android:layout_alignParentTop="true"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="8dp"
          android:layout_toEndOf="@+id/provider_name"
          android:textSize="20sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/provider_service_status"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.0"
          tools:text="Dog walker" />

      <TextView
          android:id="@+id/provider_service_status"
          android:layout_width="100dp"
          android:layout_height="0dp"
          android:layout_alignParentRight="true"
          android:layout_marginEnd="4dp"
          android:layout_marginBottom="108dp"
          android:textSize="20sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.0"
          tools:text="STATUS" />

      <TextView
          android:id="@+id/provider_service_cost"
          android:layout_width="113dp"
          android:layout_height="23dp"
          android:layout_below="@+id/provider_name"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="282dp"
          android:layout_marginBottom="92dp"
          android:textSize="20sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          tools:text="Cost: $46.19" />

      <!-- ACTIVE SERVICE -->
      <Button
          android:id="@+id/btnMessage"
          android:layout_width="88dp"
          android:layout_height="48dp"
          android:layout_below="@+id/provider_service_cost"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="4dp"
          android:background="#88e573"
          android:text="Message"
          android:textColor="@android:color/white"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent" />

      <Button
          android:id="@+id/btnLocation"
          android:layout_width="88dp"
          android:layout_height="48dp"
          android:layout_marginEnd="168dp"
          android:layout_marginBottom="4dp"
          android:background="#88e573"
          android:text="Location"
          android:textColor="@android:color/white"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />
      <!-- END ACTIVE SERVICE -->

      <!-- PENDING SERVICE -->
      <Button
          android:id="@+id/btnCancel"
          android:layout_width="88dp"
          android:layout_height="48dp"
          android:layout_below="@+id/provider_service_cost"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="4dp"
          android:background="#88e573"
          android:text="Cancel"
          android:textColor="@android:color/white"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent" />

      <!-- END PENDING SERVICE -->

      <!-- CLOSED SERVICE -->
      <Button
          android:id="@+id/btnReview"
          android:layout_width="88dp"
          android:layout_height="48dp"
          android:layout_below="@+id/provider_service_cost"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="4dp"
          android:background="#88e573"
          android:text="Review"
          android:textColor="@android:color/white"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent" />

      <Button
          android:id="@+id/btnHireAgain"
          android:layout_width="88dp"
          android:layout_height="48dp"
          android:layout_marginEnd="168dp"
          android:layout_marginBottom="4dp"
          android:background="#88e573"
          android:text="Hire Again"
          android:textColor="@android:color/white"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

      <!-- END CLOSED SERVICE -->


    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>

</LinearLayout>